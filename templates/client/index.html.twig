{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>{{ 'Lastname'|trans }}</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{'Cellphone'|trans }}</th>
                <th>{{ 'Phone'|trans }}</th>
                <th>{{ 'Address'|trans }}</th>
                <th>Mail</th>
                <th>{{ 'Professional'|trans }}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.name }}</td>
                <td>{{ client.firstname }}</td>
                <td>{{ client.celphone }}</td>
                <td>{{ client.fixe }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.mail }}</td>
                <td>{{ client.professional ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">{{ 'Show'|trans }}</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}" class="btn btn-info">{{'Create new'|trans }}</a>
{% endblock %}
